<script type="text/ng-template" id="settings.html">
  <div class="modal-header">
    <h3>Settings</h3>
  </div>
  <form>
    <div class="modal-body">
      <div class="form-horizontal" role="form">
        <div class="form-group">
          <label for="font-size" class="control-label col-sm-4">Font size</label>
          <div class="col-sm-4">
            <input type="text" class="form-control" id="font-size" ng-model="tempConfig.style.fontSize" />
          </div>
        </div>
        <div class="form-group">
          <label for="font-family" class="control-label col-sm-4">Font</label>
          <div class="col-sm-4">
            <input type="text" class="form-control" id="font-family" ng-model="tempConfig.style.fontFamily" />
          </div>
        </div>
        <div class="form-group">
          <label for="background-color" class="control-label col-sm-4">Background color</label>
          <div class="col-sm-4">
            <input type="text" class="form-control" id="background-color" ng-model="tempConfig.style.backgroundColor" />
          </div>
        </div>
        <div class="form-group">
          <label for="paper-width" class="control-label col-sm-4">Paper width</label>
          <div class="col-sm-4">
            <input type="text" class="form-control" id="paper-width" ng-model="tempConfig.style.width" />
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button class="btn btn-success" ng-click="ok()">Save</button>
      <button class="btn btn-link" ng-click="cancel()">Cancel</button>
    </div>
  </form>
</script>
